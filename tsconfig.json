{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"jsx": "react-native",
		"strict": false,
		"noImplicitAny": false,
		"useUnknownInCatchVariables": false,
		"allowJs": true,
		"checkJs": false,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@constants/*": ["src/constants/*"],
			"@assets/*": ["assets/*"],
			"@hooks": ["src/hooks"],
			"@stores/*": ["src/stores/*"],
			"@screens": ["src/screens"],
			"@lib/*": ["src/lib/*"],
			"@interfaces": ["src/interfaces/index"],
			"@api/*": ["src/api/*"],
			"@app/*": ["app/*"],
			"@layouts/*": ["layouts/*"],
			"@providers/*": ["src/providers/*"]
		},
		"isolatedModules": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "src/api/providers/WebSocketContext.js"],
	"exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
